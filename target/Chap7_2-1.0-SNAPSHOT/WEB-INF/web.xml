<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
   http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
   version="3.0">
   
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>com.mycompany.chap7_2.DownloadServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>FileDownloadServlet</servlet-name>
        <servlet-class>com.mycompany.chap7_2.FileDownloadServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ZipDownloadServlet</servlet-name>
        <servlet-class>com.mycompany.chap7_2.ZipDownloadServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>FileDownloadServlet</servlet-name>
        <url-pattern>/downloadFile</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ZipDownloadServlet</servlet-name>
        <url-pattern>/downloadZip</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
